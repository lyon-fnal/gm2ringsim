#include "geom/world.fcl"
#include "geom/arc.fcl"
#include "geom/vac.fcl"
#include "geom/inflector.fcl"
#include "geom/fiberHarp.fcl"

process_name:myProcessName

source: {
  module_type: EmptyEvent
  maxEvents:  1
}

services: {

  message : {
     debugModules : ["*"]
     suppressInfo : []
     
     destinations : {
       LogToConsole : {
         type : "cout"
         threshold : "DEBUG"
         
         categories : {
           default : { limit : 50 }
         }
       }
     }
  }

  user: {
    DetectorHolder: {}
    ActionHolder: {}
    RandomNumberGenerator: {}
    PhysicsListHolder: {}
    Geometry: {
      world: @local::world_geom
      arc:   @local::arc_geom
      vac:   @local::vac_geom
      inflector: @local::inflector_geom
      fiberHarp: @local::fiberHarp_geom
     }
     
     RunSettings: {
       SpinTracking: {
         spinTrackingEnabled : true
      }
    }
     
     
    // Detector(s) for the simulation

    // Action(s) for the simulation
    //    ClockAction: {}
    StackingAction: {  
          name: "stackingAction"
	  minWavelength:250 //nm
          maxWavelength:950  //nm
    }

    PhysicsList: {}
    //    ClockAction: {}	
    //    RunAction: {}
    World: {}	
    Arc: {}
    VacuumChamber: {}
    Inflector:{}	
    FiberHarp: {}	   
    PrimaryGeneratorAction: {
            name: "primary"	
	    muonGasVerbosity : true
            g2GPS : {
	      useMuonGasGun: true
            } //g2GPS Parameter Set
        } //PrimaryGeneratorAciton

    RunAction: {
      name: "run"
    }//RunAction


    EventAction: {
      name: "event"
      // heartbeatFreq :  100
      // heartbeatLength: 0
    }//EventAction
    

  } //user:
} //services:

outputs: {
out1: {
  module_type: RootOutput   
  fileName: "gm2ringsimout.root"
  }
}

physics: {
  producers: {
    artg4Main: {
      module_type: artg4Main
      enableVisualization: true
      macroPath: ".:./macros:../macros:../../macros"
      visMacro: "vis.mac"
      afterEvent: pause
      //      pauseAfterEvent: true
    }
  }

  path1: [ artg4Main ]
  stream1:  [ out1 ]

  trigger_paths: [ path1 ]
  end_paths: [ stream1 ]
}

// Override Arc display
services.user.Geometry.arc.display : true
